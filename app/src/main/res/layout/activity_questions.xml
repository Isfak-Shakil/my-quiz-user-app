<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionsActivity">
    <LinearLayout
        android:id="@+id/linearLayoutOne"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/colorPri"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/qCount"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:textSize="@dimen/_26sdp"
            android:textStyle="bold"
            android:text="1/10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/question"
            android:gravity="center"
            android:layout_margin="@dimen/_16sdp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="@dimen/_18sdp"
            android:text="Question"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_170sdp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutTwo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_32sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutOne"
        >

        <Button
            android:id="@+id/option1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner"
            android:backgroundTint="#E99C03"
            android:elevation="@dimen/_3sdp"
            android:padding="@dimen/_16sdp"
            android:text="Option 1"
            android:layout_marginBottom="@dimen/_22sdp"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/option2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner"
            android:backgroundTint="#E99C03"
            android:elevation="@dimen/_3sdp"
            android:padding="@dimen/_16sdp"
            android:text="Option 2"
            android:layout_marginBottom="@dimen/_22sdp"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/option3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner"
            android:backgroundTint="#E99C03"
            android:elevation="@dimen/_3sdp"
            android:padding="@dimen/_16sdp"
            android:text="Option 3"
            android:layout_marginBottom="@dimen/_22sdp"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/option4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner"
            android:backgroundTint="#E99C03"
            android:elevation="@dimen/_3sdp"
            android:padding="@dimen/_16sdp"
            android:text="Option 4"
            android:layout_marginBottom="@dimen/_22sdp"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold" />

    </LinearLayout>
    <TextView
        android:id="@+id/qTimer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutTwo"
        android:backgroundTint="#E99C03"
        android:background="@drawable/round_corner"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_22sdp"
        android:text="10"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>