<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorGray00"
    tools:context=".SetsActivity">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/shape_rec01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/backBtn"
            android:background="@null"
            android:src="@drawable/ic_back_white"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"/>
        <TextView
            android:id="@+id/nameTollbar"
            android:textStyle="bold"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/colorWhite"
            android:layout_centerHorizontal="true"
            android:text="get category name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/setsTextView"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/colorPri"
        android:textSize="@dimen/_30sdp"
        android:text="Sets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <GridView
        android:id="@+id/setsGridView"
        android:columnWidth="@dimen/_100sdp"
        android:padding="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_10sdp"
        android:verticalSpacing="@dimen/_16sdp"
        android:horizontalSpacing="@dimen/_16sdp"
        android:numColumns="auto_fit"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>